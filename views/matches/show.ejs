<%layout ('layouts/boilerplate')%>

    <link rel="stylesheet" href="/styles/stars.css">

    <div class="container mt-4">

        <div class="row">

            <div class="col-lg-6">

                <h1>Match details</h1>

                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <% matches.images.forEach((image, i)=> { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                <img src="<%= image.url %>" class="d-block w-100 img-fluid" alt="Match image">
                            </div>
                            <% }) %>
                    </div>

                    <% if (matches.images.length> 1) { %>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                </div>
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title ">
                            <%= matches.title %>
                        </h5>
                        <p class="card-text text-muted">
                            <%=matches.description%>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <%= matches.location %>
                        </li>
                        <li class="list-group-item">
                            Submitted by <%=matches.author.username %>
                        </li>
                        <li class="list-group-item">
                            $<%=matches.price%>/seat
                        </li>
                    </ul>

                    <%if ( currentUser && matches.author.equals(currentUser._id)) {%>
                        <div class="card-body d-flex justify-content-between">
                            <div>
                                <a class="card-link btn btn-sm btn-outline-secondary" href="/Matches">Return to main
                                    menu</a>
                                <a class="card-link btn btn-sm btn-warning" href="/matches/<%=matches.id%>/edit">Edit
                                    details</a>
                            </div>
                            <form action="/matches/<%= matches._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                        <%} else {%>
                            <div class="card-body">
                                <a class="card-link btn btn-sm btn-outline-secondary" href="/Matches">Return to main
                                    menu</a>
                            </div>
                            <%}%>
                </div>
            </div>
            <div class="col-lg-6">

                <div id="map" style="width: 100%; height: 300px;" class="mb-3 mt-4 mt-lg-0"></div>
                <% if(currentUser){ %>
                    <form action="/matches/<%= matches._id %>/reviews" method="POST" class="mb-3 validated-form"
                        novalidate>
                        <h2>Give it a rating</h2>
                        <div class="mb-3">
                            <fieldset class="starability-basic">
                                <legend class="visually-hidden">Rating</legend>
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <h3>Review</h3>
                        <textarea id="review" placeholder="Leave a comment" class="form-control" cols="30" rows="3"
                            name="review[body]" required></textarea>
                        <button class="btn btn-success mt-2">Submit</button>
                    </form>
                    <% } %>
                        <%if(matches.review.length> 0) {%>
                            <h3 class="mt-4">Match Reviews</h3>
                            <%}%>
                                <%for (let review of matches.review){%>
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <p class="starability-result mb-2" data-rating="<%= review.rating %>">
                                                Rated <%= review.rating %> stars
                                            </p>

                                            <h6 class="card-subtitle mb-2 text-muted">By: <%= review.author.username%>
                                            </h6>

                                            <p class="card-text">
                                                <%= review.body%>
                                            </p>

                                            <%if ( currentUser && review.author.equals(currentUser._id)) {%>
                                                <form
                                                    action="/matches/<%= matches._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                    method="POST">
                                                    <button class="btn btn-sm btn-danger float-end">Delete</button>
                                                </form>
                                                <% } %>
                                        </div>
                                    </div>
                                    <%}%>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const maptilerApiKey = '<%= process.env.MAPTILER_API_KEY %>';
        const matches = <%- JSON.stringify(matches) %>;
    </script>

    <script src="/javascripts/showPageMap.js"></script>